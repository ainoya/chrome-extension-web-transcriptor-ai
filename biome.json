{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "css": { "parser": { "tailwindDirectives": true } },
  "formatter": {
    "includes": ["**", "!dist", "!package-lock.json"]
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!dist", "!package-lock.json"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": {
          "level": "warn",
          "options": { "ignore": ["tailwind", "layer", "apply"] }
        }
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
